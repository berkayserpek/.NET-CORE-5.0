@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "ContactSub", FormMethod.Post))
{
<form class="form-group" method="post">
    @Html.HiddenFor(x => x.ContactID, new { @class = "form-control" })
    <br />
    <label>İçerik</label>
    @Html.TextAreaFor(x => x.Description,8,3, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
}

