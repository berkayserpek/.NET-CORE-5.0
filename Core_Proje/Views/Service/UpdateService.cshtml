@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Güncelleme Sayfası</h3>
</div>

@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
{
    <form class="form-group" method="post">
        @Html.HiddenFor(x => x.ServiceID, new { @class = "form-control" })
        <br />
        @Html.Label("Hizmet Başlığı")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>Fotoğraf Yolu</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </form>
}

